extends layout

block content
  .col-lg-4.col-lg-offset-4
    form(method="POST", action="/login")
      input.form-control(type="email", placeholder="Email address", required="required", name="user[email]")
      input.form-control(type="password", placeholder="Password", required="required", name="user[password]")
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Log In
